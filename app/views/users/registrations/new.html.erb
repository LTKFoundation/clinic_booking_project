<h3>New user account</h3>
<br>
<% if doctor_signed_in? %>
  <h2> You have to log our first </h2>
  <div class = 'container'>
    <%= link_to "Log Out", destroy_doctor_session_path, method: 'delete', class: "waves-light btn" %>
    <%= link_to "Back", :back, class: "waves-light btn" %>
  </div>

<% else %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-field">
      <%= f.text_field :name, autofocus: true %>
      <%= f.label :name %>
    </div>

    <div class="input-field">
      <%= f.email_field :email %>
      <%= f.label :email %>
    </div>

    <div class="input-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="input-field">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="input-field form-actions">
      <%= f.button "Sign up", class: "waves-effect waves-light btn", type:"submit" %>
    </div>

  <% end %>


  <%= render "users/shared/links" %>
<% end %>
