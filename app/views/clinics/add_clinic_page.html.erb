<html>
  <head>
    <title>Tìm bác sỹ gần đây</title>
  </head>
<body>

 
  <h3>Thêm phòng khám mới</h3>
  <%= form_for Clinic.new do |f| %>
    <div class = "input-field">
      <%= f.text_field :name %>
      <label>Tên phòng khám</label>
    </div>
    
    <div class = "input-field">
      <%= f.text_field :address, placeholder: ''%>
      <label>Địa chỉ</label>
    </div>
      <%= f.hidden_field :latitude, id: 'map-lat', value: "" %>
      <%= f.hidden_field :longtitude, id: 'map-lng', value: "" %>
      <%= f.hidden_field :doctor_id, value: current_doctor.id %>
    <div>Bác sĩ có thể kéo thả để chọn vị trí chính xác của phòng khám: </div>
    <div id="map-container">
      <div id="map-canvas"></div>
    </div>    
 
    <br/>
    
    <div><%= f.submit "Tạo phòng khám", class: "btn waves-effect waves-light" %></div>
  <% end %>

  <script src= 'https://maps.googleapis.com/maps/api/js?key=AIzaSyCHC3pq8j8gzrqJhbjcZZALu1_UwYsjhSE&callback=initMapWithCurLoc' >
        $(document).ready(function() {
            initMapWithCurLoc();

         });
  </script>
</body>

</html>