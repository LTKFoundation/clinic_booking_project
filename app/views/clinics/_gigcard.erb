<div class="card">
	<div class="card-content">
		<span class="card-title"><%=gig[2]%></span>
		<p><%=gig[3]%></p>
	</div>
	<div class="card-action">
		<% if gig[4]!=nil%>
			<%=link_to "Xem thông tin" ,clinic_path(gig[4])%>
		<% end%>
		<% if gig[5]!=nil%>
			<%=link_to "Đặt khám ngay", doctor_gig_client_view_path(gig[6],gig[5])%>
		<% end %>
