
<div class="col s12">
<% if @bookings %>
  <div class="row s12">
    <h5 class="col s12">Review before payment</h5>
  </div>
	<%= form_for @cart do |cart|%>
		<% @bookings.each do |booking|%>
      <div class="row s12">  
      <%=render partial: "shared/cart_item", locals:{booking: booking} %>
      </div>
		<% end %>
  <div class="row s12">
    <div class="col">
		<button class="btn waves-effect waves-light" type="submit" name="action">
				Thanh Toán<i class="material-icons right">send</i>
		</button>
    </div>
  </div>
	<% end %>
<% else %>
<p>Bạn chưa chọn lịch khám nào</p>
<% end %>
</div>
